import java.util.Scanner;

public class Estadistica {
    private double[] datos;
    private int n;

    public Estadistica(double[] datos) {
        this.datos = datos;
        this.n = datos.length;
    }

    public double promedio() {
        double suma = 0;
        for (int i = 0; i < n; i++) {
            suma += datos[i];
        }
        return suma / n;
    }
    public double desviacion() {
        double media = promedio();
        double suma = 0;
        for (int i = 0; i < n; i++) {
            suma += Math.pow(datos[i] - media, 2);
        }
        return Math.sqrt(suma / (n - 1));
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        double[] numeros = new double[10];
        System.out.println("Ingrese 10 números:");
        for (int i = 0; i < 10; i++) {
            numeros[i] = sc.nextDouble();
        }
        Estadistica estadistica = new Estadistica(numeros);
        System.out.printf("El promedio es %.2f%n", estadistica.promedio());
        System.out.printf("La desviación estandar es %.5f%n", estadistica.desviacion());
        sc.close();
    }
}
